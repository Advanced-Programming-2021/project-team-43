<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="750.0" prefWidth="1000.0" styleClass="body" stylesheets="@../images/background/loginBackground.css" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.RegisterAndLoginView">
   <children>
      <VBox alignment="CENTER" layoutX="356.0" layoutY="162.0" prefHeight="115.0" prefWidth="287.0" spacing="10.0">
         <children>
            <TextField fx:id="registerUsernameTxt" focusTraversable="false" maxHeight="30.0" maxWidth="200.0" prefHeight="30.0" prefWidth="200.0" promptText="username">
               <font>
                  <Font name="Bodoni MT" size="16.0" />
               </font></TextField>
            <TextField fx:id="registerNicknameTxt" focusTraversable="false" maxHeight="30.0" maxWidth="200.0" prefHeight="30.0" prefWidth="200.0" promptText="nickname">
               <font>
                  <Font name="Bodoni MT" size="16.0" />
               </font></TextField>
            <PasswordField fx:id="registerPassword" focusTraversable="false" maxHeight="30.0" maxWidth="200.0" prefHeight="30.0" prefWidth="200.0" promptText="password">
               <font>
                  <Font name="Bodoni MT" size="16.0" />
               </font></PasswordField>
         </children>
      </VBox>
      <Button fx:id="registerBtn" alignment="CENTER" contentDisplay="CENTER" layoutX="412.0" layoutY="402.0" mnemonicParsing="false" onAction="#pressRegisterBtn" prefHeight="55.0" prefWidth="176.0" style="-fx-background-color: #ec1c24;" text="Register" textFill="WHITE">
         <font>
            <Font name="Bodoni MT" size="19.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <effect>
            <Bloom />
         </effect></Button>
      <Label fx:id="registerMessageLbl" alignment="CENTER" contentDisplay="CENTER" layoutX="286.0" layoutY="297.0" prefHeight="90.0" prefWidth="427.0" textAlignment="CENTER" textFill="WHITE">
         <effect>
            <Bloom />
         </effect>
         <font>
            <Font name="Bodoni MT" size="24.0" />
         </font></Label>
      <Label fx:id="loginLbl" alignment="CENTER" contentDisplay="CENTER" layoutX="359.0" layoutY="480.0" onMouseClicked="#gotToLoginPage" prefHeight="42.0" prefWidth="281.0" text="Have account?" textFill="WHITE">
         <font>
            <Font name="Bodoni MT" size="22.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <effect>
            <Bloom />
         </effect></Label>
      <Button alignment="CENTER" contentDisplay="CENTER" layoutX="448.0" layoutY="556.0" mnemonicParsing="false" onAction="#pressBackBtn" prefHeight="42.0" prefWidth="102.0" style="-fx-background-color: #ec1c24;" text="Back" textFill="WHITE">
         <font>
            <Font name="Bodoni MT" size="19.0" />
         </font>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
         <effect>
            <Bloom />
         </effect></Button>
   </children>
</AnchorPane>
