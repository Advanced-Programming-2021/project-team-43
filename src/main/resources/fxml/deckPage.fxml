<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="deckPane" maxHeight="760.0" maxWidth="1000.0" prefHeight="760.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.DeckView">
   <children>
      <ImageView fx:id="previousBtn" fitHeight="30.0" fitWidth="30.0" layoutX="6.0" layoutY="315.0" onMouseClicked="#previousDeck" pickOnBounds="true" preserveRatio="true" rotate="180.0">
         <image>
            <Image url="@../images/nextBtn.jpg" />
         </image>
      </ImageView>
      <ImageView fx:id="nextBtn" fitHeight="30.0" fitWidth="30.0" layoutX="320.0" layoutY="315.0" onMouseClicked="#nextDeck" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/nextBtn.jpg" />
         </image>
      </ImageView>
      <Button fx:id="newDeckBtn" layoutX="21.0" layoutY="611.0" mnemonicParsing="false" onAction="#createNewDeck" prefHeight="30.0" prefWidth="107.0" text="New Deck" />
      <TextField fx:id="deckNameTxt" focusTraversable="false" layoutX="153.0" layoutY="611.0" prefHeight="30.0" prefWidth="188.0" promptText="Deck Name" visible="false" />
      <Label fx:id="messageLbl" alignment="CENTER" contentDisplay="CENTER" layoutX="37.0" layoutY="660.0" prefHeight="55.0" prefWidth="357.0">
         <font>
            <Font name="Bodoni MT" size="16.0" />
         </font></Label>
      <Button fx:id="backBtn" alignment="CENTER" contentDisplay="CENTER" layoutX="37.0" layoutY="660.0" mnemonicParsing="false" onAction="#pressBackBtn" prefHeight="30.0" prefWidth="80.0" text="Back" />
