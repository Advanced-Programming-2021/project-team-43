      <CheckBox fx:id="isActiveCheckBox" layoutX="181.0" layoutY="543.0" mnemonicParsing="false" prefHeight="30.0" prefWidth="132.0" text="Set as Active Deck" />
      <ImageView fx:id="deckImgView" fitHeight="423.0" fitWidth="282.0" layoutX="37.0" layoutY="122.0" pickOnBounds="true" preserveRatio="true" />
      <Label fx:id="deckInfoLbl" alignment="CENTER" contentDisplay="CENTER" layoutX="37.0" layoutY="103.0" lineSpacing="10.0" prefHeight="423.0" prefWidth="281.0" textAlignment="CENTER" textFill="RED">
         <font>
            <Font size="27.0" />
         </font>
         <cursor>
            <Cursor fx:constant="CLOSED_HAND" />
         </cursor>
      </Label>
      <AnchorPane fx:id="mainDeckPane" layoutX="358.0" layoutY="7.0" prefHeight="446.0" prefWidth="634.0" />
      <AnchorPane fx:id="sideDeckPane" layoutX="357.0" layoutY="463.0" prefHeight="292.0" prefWidth="634.0" />
   </children>
</AnchorPane>
