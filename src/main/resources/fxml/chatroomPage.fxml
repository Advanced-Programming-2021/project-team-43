<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="chatRoomPane" prefHeight="760.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.ChatRoomView">
    <ScrollPane fx:id="scrollPane" hbarPolicy="NEVER" layoutX="20.0" layoutY="86.0" pannable="true" prefHeight="586.0" prefWidth="438.0" vbarPolicy="ALWAYS">
        <content>
            <VBox fx:id="messageVBox" prefHeight="570.0" prefWidth="438.0" spacing="2.0" />
        </content>
    </ScrollPane>
    <TextField fx:id="messageTxt" focusTraversable="false" layoutX="20.0" layoutY="673.0" prefHeight="27.0" prefWidth="374.0" promptText="message">
        <cursor>
            <Cursor fx:constant="TEXT" />
        </cursor>
    </TextField>
    <Button fx:id="sendBtn" focusTraversable="false" layoutX="394.0" layoutY="673.0" mnemonicParsing="false" onAction="#sendMessage" prefHeight="28.0" prefWidth="63.0" text="Send">
        <font>
            <Font name="Bodoni MT" size="15.0" />
        </font>
    </Button>
    <Label fx:id="headLbl" layoutX="159.0" layoutY="14.0" prefHeight="39.0" prefWidth="298.0" style="-fx-background-color: #006666;" textFill="WHITE">
        <font>
            <Font name="Bodoni MT" size="22.0" />
        </font>
    </Label>
    <Label layoutX="20.0" layoutY="14.0" prefHeight="39.0" prefWidth="139.0" style="-fx-background-color: #006666;" text="Online Users: " textFill="WHITE">
        <font>
            <Font name="Bodoni MT" size="22.0" />
        </font>
    </Label>
    <Label fx:id="pinHeadLbl" layoutX="20.0" layoutY="53.0" prefHeight="34.0" prefWidth="438.0" style="-fx-background-color: #00b3b3;" wrapText="true">
        <font>
            <Font name="Bodoni MT" size="18.0" />
        </font>
    </Label>
    <AnchorPane fx:id="userPane" layoutX="571.0" layoutY="126.0" prefHeight="230.0" prefWidth="353.0">
        <children>
            <ImageView fx:id="userImage" fitHeight="122.0" fitWidth="116.0" layoutX="14.0" layoutY="14.0" pickOnBounds="true" preserveRatio="true" />
            <Label fx:id="infoLbl" alignment="CENTER" contentDisplay="CENTER" layoutX="148.0" layoutY="14.0" prefHeight="135.0" prefWidth="194.0" textAlignment="CENTER" wrapText="true">
                <font>
                    <Font name="Bodoni MT" size="19.0" />
                </font>
            </Label>
        </children>
    </AnchorPane>
   <Button alignment="CENTER" contentDisplay="CENTER" layoutX="888.0" layoutY="675.0" mnemonicParsing="false" onAction="#back" prefHeight="35.0" prefWidth="80.0" text="Back" textAlignment="CENTER">
      <font>
         <Font name="Bodoni MT" size="18.0" />
      </font>
   </Button>
</AnchorPane>
