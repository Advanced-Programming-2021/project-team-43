<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="profilePane" maxHeight="750.0" maxWidth="1000.0" prefHeight="750.0" prefWidth="1000.0" styleClass="body" stylesheets="@../images/background/profileBackground.css" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.ProfileView">
   <children>
      <ImageView fx:id="profileImg" fitHeight="116.0" fitWidth="128.0" layoutX="436.0" layoutY="110.0" pickOnBounds="true" preserveRatio="true" />
      <Label fx:id="usernameLbl" alignment="CENTER" contentDisplay="CENTER" layoutX="404.0" layoutY="291.0" prefHeight="35.0" prefWidth="191.0" textFill="#b7ff00">
         <font>
            <Font name="Bodoni MT" size="25.0" />
         </font></Label>
      <TextField fx:id="nicknameTxt" focusTraversable="false" layoutX="362.0" layoutY="344.0">
         <font>
            <Font size="13.0" />
         </font>
         <cursor>
            <Cursor fx:constant="TEXT" />
         </cursor></TextField>
      <Label fx:id="nicknameChangeLbl" alignment="CENTER" contentDisplay="CENTER" layoutX="342.0" layoutY="388.0" prefHeight="48.0" prefWidth="364.0" textFill="#b7ff00">
         <font>
            <Font size="17.0" />
         </font></Label>
      <Button fx:id="changeNicknameBtn" alignment="CENTER" contentDisplay="CENTER" layoutX="573.0" layoutY="344.0" mnemonicParsing="false" onAction="#pressChangeNickname" text="Change Nickname">
         <font>
            <Font name="Bodoni MT" size="13.0" />
         </font></Button>
      <Button fx:id="changePasswordBtn" alignment="CENTER" contentDisplay="CENTER" layoutX="467.0" layoutY="436.0" mnemonicParsing="false" onAction="#pressChangePassword" text="Change Password">
         <font>
            <Font name="Bodoni MT" size="13.0" />
         </font>
      </Button>
      <VBox alignment="CENTER" layoutX="342.0" layoutY="463.0" prefHeight="147.0" prefWidth="364.0" spacing="10.0">
         <children>
            <TextField fx:id="passwordTxt" focusTraversable="false" maxWidth="200.0" prefWidth="200.0" promptText="Password" />
            <TextField fx:id="newPasswordTxt" focusTraversable="false" maxWidth="200.0" prefWidth="200.0" promptText="New Password" />
            <Label fx:id="changePasswordLbl" alignment="CENTER" contentDisplay="CENTER" prefHeight="34.0" prefWidth="364.0" textFill="#b7ff00">
               <font>
                  <Font size="13.0" />
               </font>
            </Label>
         </children>
      </VBox>
      <ImageView fx:id="nextBtn" fitHeight="30.0" fitWidth="30.0" layoutX="580.0" layoutY="177.0" onMouseClicked="#pressNextImage" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../images/nextBtn.jpg" />
         </image>
         <effect>
            <DisplacementMap>
               <mapData>
                  <FloatMap />
               </mapData>
               <input>
                  <InnerShadow />
               </input>
            </DisplacementMap>
         </effect></ImageView>
      <ImageView fx:id="previousBtn" fitHeight="30.0" fitWidth="30.0" layoutX="389.0" layoutY="177.0" onMouseClicked="#pressPreviousImage" pickOnBounds="true" preserveRatio="true" rotate="180.0">
         <image>
            <Image url="@../images/nextBtn.jpg" />
         </image>
         <effect>
            <DisplacementMap>
               <mapData>
                  <FloatMap />
               </mapData>
               <input>
                  <InnerShadow />
               </input>
            </DisplacementMap>
         </effect>
      </ImageView>
      <Button fx:id="changeImageBtn" alignment="CENTER" contentDisplay="CENTER" layoutX="453.0" layoutY="265.0" mnemonicParsing="false" onAction="#pressChangeImage" text="Change Image">
         <font>
            <Font name="Bodoni MT" size="13.0" />
         </font></Button>
      <Button fx:id="backBtn" alignment="CENTER" contentDisplay="CENTER" layoutX="215.0" layoutY="537.0" mnemonicParsing="false" onAction="#pressBack" text="Back" />
   </children>
</AnchorPane>
