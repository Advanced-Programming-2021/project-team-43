<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="760.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="view.InvitationView">
    <children>
        <VBox fx:id="vBox" layoutX="14.0" prefHeight="744.0" prefWidth="468.0" spacing="15.0">
            <children>
                <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="82.0" prefWidth="469.0" text="Lets Play!" textAlignment="CENTER">
                    <font>
                        <Font name="Bodoni MT" size="66.0" />
                    </font>
                </Label>
            </children>
        </VBox>
        <Label alignment="CENTER" contentDisplay="CENTER" layoutX="617.0" layoutY="61.0" prefHeight="52.0" prefWidth="270.0" text="Want to send an Invitation?" textAlignment="CENTER">
            <font>
                <Font name="Bodoni MT" size="22.0" />
            </font>
        </Label>
        <Button fx:id="sendBtn" focusTraversable="false" layoutX="727.0" layoutY="203.0" mnemonicParsing="false" onMouseClicked="#send" text="Send">
            <font>
                <Font name="Bodoni MT" size="15.0" />
            </font>
        </Button>
        <TextField fx:id="rivalNameTxt" focusTraversable="false" layoutX="662.0" layoutY="151.0" promptText="rival username">
            <font>
                <Font name="Bodoni MT" size="14.0" />
            </font>
        </TextField>
        <Label fx:id="messageLbl" alignment="CENTER" contentDisplay="CENTER" layoutX="611.0" layoutY="265.0" prefHeight="61.0" prefWidth="283.0" textAlignment="CENTER">
            <font>
                <Font name="Bodoni MT" size="17.0" />
            </font>
        </Label>
        <Button layoutX="870.0" layoutY="676.0" mnemonicParsing="false" onMouseClicked="#back" prefHeight="35.0" prefWidth="63.0" text="Back">
            <font>
                <Font name="Bodoni MT" size="16.0" />
            </font>
        </Button>
        <ImageView fitHeight="35.0" fitWidth="31.0" layoutX="920.0" layoutY="30.0" pickOnBounds="true" preserveRatio="true" onMouseClicked="#refresh">
            <image>
                <Image url="@../images/refresh.png" />
            </image>
        </ImageView>
    </children>
</AnchorPane>